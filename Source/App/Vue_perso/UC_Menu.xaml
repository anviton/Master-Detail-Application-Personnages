<UserControl x:Class="Vue_perso.UC_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue_perso"
             mc:Ignorable="d">
    <Menu Background="#FFF9E2C6" DockPanel.Dock="Top">
        <Button Content="Accueil" Width="100" Margin="5" Background="#FFB2EFF9" Click="RetourAccueil"/>
        <MenuItem Header="Listes">
            <MenuItem Header="+ Nouveau groupe" Click="NouveauGroupe"/>
            <MenuItem Header="- Supprimer groupe" Click="SupprimerGroupe"/>
            <MenuItem Header="Consulter une liste" ItemsSource="{Binding Groupes.Keys}" Click="GroupeSelectionnee"/>
        </MenuItem>
        <MenuItem Header="Actions personnages">
            <MenuItem Header="Importer"/>
            <MenuItem Header="Nouveau Personnage"/>
            <MenuItem Header="Modifier" Click="ModifierPersonnage"/>
            <MenuItem Header="Supprimer"/>
        </MenuItem>

    </Menu>
</UserControl>
