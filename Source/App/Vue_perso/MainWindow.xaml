<Window x:Class="Vue_perso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vue_perso"
        mc:Ignorable="d"
        Title="Perso" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BouttonModif">
            <Setter Property="Background" Value="Beige"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Content" Value="Modifier"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="30">
            <Button Content="Accueil" Width="100" Margin="5" Background="#FFB2EFF9"/>
            <Button Content="Ajouter à une Liste" Width="120" Margin="5" Background="#FFB2ECF5"/>
        </StackPanel>
        
        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox TextWrapping="NoWrap" Grid.Row="0"></TextBox>
            <TextBlock Grid.Row="1" Text="Personnages"/>
            <ListBox Grid.Row="2">
            </ListBox>
        </Grid>
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Image Source="image.jpg" Width="105"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition  Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Center" Text="Jeux video :" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="62"/>
            <TextBlock HorizontalAlignment="Center" Text="Théme musical" VerticalAlignment="Center" Grid.Row="1" Height="16" Width="78"/>
            <TextBlock HorizontalAlignment="Center" Text="Relation avec d'autres personnages" VerticalAlignment="Center" Grid.Row="2" Height="16" Width="186"/>
            <TextBlock HorizontalAlignment="Center" Text="Descritption :" VerticalAlignment="Top" Grid.Row="3" Height="16" Width="70"/>
            <Button Style="{StaticResource BouttonModif}" Grid.Column="2" Grid.Row="3"/>
            <Button Style="{StaticResource BouttonModif}" Grid.Column="2"  Grid.Row="2" />
            <Button Style="{StaticResource BouttonModif}" Grid.Column="2" Grid.Row="1"/>
            <Button Style="{StaticResource BouttonModif}" Grid.Column="2" Grid.Row="0"/>
            <Button Content="Test" Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="3" VerticalAlignment="Bottom"/>
            
        </Grid>

    </DockPanel>
</Window>
