<Window x:Class="Vue_perso.Dialogs.SuppressionConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vue_perso.Dialogs"
        mc:Ignorable="d"
        Title="SuppressionConfirmation" Height="100" Width="300">
    <StackPanel>
        <Label Content="Etes vou sur de vouloir Supprimer ce personnage?" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Content="OUI" Width="50" Margin="5" Click="SupprmierLePersonnage"/>
            <Button Content="NON" Width="50" Margin="5" Click="AnnulerLaSupression"/>
        </StackPanel>
    </StackPanel>
</Window>
