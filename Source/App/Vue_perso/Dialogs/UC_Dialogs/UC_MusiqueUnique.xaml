<UserControl x:Class="Vue_perso.Dialogs.UC_Dialogs.UC_MusiqueUnique"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue_perso.Dialogs.UC_Dialogs"
             mc:Ignorable="d"
             d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="75*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label Content="Titre : " Grid.Column="0" Grid.Row="0" />
        <TextBox Text="\{Binding Titre[0].Nom}" Grid.Column="1" Grid.Row="0" />

        <Label Content="Lien : " Grid.Column="0" Grid.Row="1" />
        <TextBox Text="\{Binding Titre[0].Lien}" Grid.Column="1" Grid.Row="1" />
    </Grid>
</UserControl>
