<UserControl x:Class="Vue_perso.Dialogs.UC_Dialogs.UC_Leitmotiv"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue_perso.Dialogs.UC_Dialogs"
             mc:Ignorable="d"
             d:DesignWidth="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="_Ajouter un titre" Click="AjouterTitre" Margin="0,0,5,0" Padding="5" />
            <Button Content="_Supprimer un titre" Click="SupprimerTitre" Margin="0,0,5,0" Padding="5" />
        </StackPanel>

        <ListBox ItemsSource="{Binding Titres}" Name="TitresListBox" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="200"/>
    </StackPanel>
</UserControl>
