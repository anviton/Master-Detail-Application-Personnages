<UserControl x:Class="Vue_perso.UC_accueil.MosaiqueJeux_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue_perso.UC_accueil"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Bibliothèques_Images;Component/Images_Fonds/arriere_plan_grille_perso.jpg"></ImageBrush>
        </Grid.Background>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="#FF98CBF7" Opacity="0.6"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox DockPanel.Dock="Top" Text="Rechercher une Série de Jeux" TextWrapping="NoWrap"/>
            <ListBox Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Series}" SelectionChanged="SerieSelectionnee">

                <ListBox.Background>
                    <SolidColorBrush Color="#FF98CBF7" Opacity="0"></SolidColorBrush>
                </ListBox.Background>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <Image Source="/Bibliothèques_Images;Component/Images_Fonds/image.jpg" Width="100"/>
                            <TextBlock Text="{Binding Nom}"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

</UserControl>
