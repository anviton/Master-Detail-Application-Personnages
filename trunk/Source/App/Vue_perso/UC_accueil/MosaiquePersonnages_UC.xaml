<UserControl x:Class="Vue_perso.UC_accueil.MosaiquePersonnages_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue_perso.UC_accueil"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="/Bibliothèques_Images;Component/Images_Fonds/arriere_plan_grille_perso.jpg" />
    </UserControl.Background>

    <DockPanel>
        <DockPanel.Background>
            <SolidColorBrush Color="DarkSalmon" Opacity="0.6"/>
        </DockPanel.Background>

        <ListBox ItemsSource="{Binding Personnages}" Background="{x:Null}" MouseUp="PersonnageSelectionne" SelectedItem="{Binding PersonnageSelectionne}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Image, Converter={StaticResource string2ImageConverter}}" Width="100" />
                        <TextBlock Text="{Binding Nom}" Style="{StaticResource textInformatif}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
